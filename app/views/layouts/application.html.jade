html(lang="en" id="ng-app", ng-app="app")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="description", content="")
    meta(name="author", content="")
    meta(name="viewport", content="width=device-width")
    title Geddy App | This app uses Geddy.js

    // The HTML5 shim, for IE6-8 support of HTML elements
    //if lt IE 9
      script(src="http://html5shim.googlecode.com/svn/trunk/html5.js")

    != scriptLink('/js/vendor/jquery.min.js', {type:'text/javascript'})
    != scriptLink('/js/vendor/bootstrap.min.js', {type:'text/javascript'})
    != scriptLink("/js/vendor/angular/angular.min.js")
    != scriptLink("/js/vendor/angular/angular-ui.min.js")
    != scriptLink("/js/vendor/angular/angular-cookies.min.js")
    != scriptLink("/js/vendor/angular/angular-resource.min.js")
    != scriptLink("/js/vendor/angular/angular-sanitize.min.js")
    != scriptLink("/js/vendor/angular/angular-route.min.js")
    != scriptLink("/js/vendor/lodash.compat.min.js")
    != scriptLink('/js/vendor/notify.min.js')
    != scriptLink('/js/vendor/ngprogress-lite.min.js')
    != scriptLink("/js/vendor/moment.min.js")
    != scriptLink("/js/vendor/placeholder.js")
    != scriptLink("/build/js/app.min.js")

    //BOOTSTRAP
    != scriptLink("/js/vendor/ui-bootstrap-tpls-0.6.0.min.js")
    != styleLink('/css/bootstrap-modal.css', {rel:'stylesheet'})
    //- Styles
    != styleLink('/css/bootstrap.min.css', {rel:'stylesheet'})
    != styleLink('/build/css/build.min.css', {rel:'stylesheet'})
    != styleLink('/css/style.css', {rel:'stylesheet'})
      != styleLink('/css/ngprogress-lite.css', rel='stylesheet')

    //if lt IE 9
    script(src='/js/vendor/html5.js')

    //if lte IE 8
    != scriptLink('/js/vendor/json3.min.js')
    != scriptLink('/js/vendor/PIE_IE678.js')
    // The fav and touch icons
    link(rel="shortcut icon", href="/images/favicon.ico")
    link(rel="apple-touch-icon", href="images/apple-touch-icon.png")
    link(rel="apple-touch-icon", sizes="72x72", href="images/apple-touch-icon-72x72.png")
    link(rel="apple-touch-icon", sizes="114x114", href="images/apple-touch-icon-114x114.png")

  body
      .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container
          .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              a.navbar-brand(href='#') Project name
          .collapse.navbar-collapse
              ul.nav.navbar-nav
                  li.active
                      a(href='#') Home
                  li
                      a(href='#about') About
                  li
                      a(href='#contact') Contact

    .container
      != yield()
