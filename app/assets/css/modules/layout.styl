                        .showscan
                            float right
                            width 150px
                            padding 10px
                            position relative
                            a
                                text-decoration none
                                color white
                            .scanicon
                                background-image url($img_path"scan_icon.png")
                                background-repeat no-repeat
                                cursor pointer
                                height 29px
                                width 23px
                                float left
                                margin 5px

        .additionalinfo
            background none
            position relative
            border none
            padding-top 20px
            table.main
                width 100%
                cursor default
                font-size 0.9em
                border-collapse collapse
                tr
                    td
                        padding 4px
                    td.left
                        color #b3cef0
                        border none
                        background none
                        vertical-align bottom
                        text-align right
                        width 230px
                        .mini
                            font-size 0.7em
                        .advanced
                            padding 20px 0
                            color white
                            margin 5px
                            .plusicon
                                background-image url($img_path"plus.png")
                                background-repeat no-repeat
                                cursor pointer
                                height 15px
                                width 15px
                                float left
                                margin 2px 0 2px 15px
                        .confirm
                            padding 20px
                            color white
                            width 100px
                            margin 5px
                    td.leftl
                        width 32%
                        vertical-align top
                        padding 5px
                        position relative
                        .bluebtn, .yellowbtn
                            width 45%
                            margin 5px
                            padding 20px 0
                            text-align center
                    td.last
                        vertical-align top
                        position relative
                        .rejectconditions
                            width 100%
                            background-color #d7e8fe
                            margin 0 0 10px 0
                            textarea
                                width 395px
                                height 60px
                                margin 10px 10px 0 10px
                                background-color white
                                border none
                                resize none
                                outline none
                                color #989898
                            select
                                width 240px
                                border none
                                outline none
                                background-color white
                                color #535354
                                margin 17px 10px 10px 10px
                                padding 5px
                        .reject
                            padding 20px
                            color white
                            width 100px
                            margin 5px
                            position relative
                            display inline-block
                            _zoom 1
                        .exit
                            padding 20px
                            color white
                            width 100px
                            margin 5px
                    td.center
                        color white
                        .ltdtitle
                            color #ffae3b
                            margin-bottom 25px
                            margin-left -10px
                            font-weight bold
                        background none
                        border-width 1px
                        border-color #b3cef0
                        border-style none none solid none
                        text-align left
                        padding-left 20px
                        vertical-align bottom
                    td.checkresult
                        background none
                        border-width 1px
                        border-color #b3cef0
                        border-style none none solid none
