            cursor default

    .findblock
        width 980px
        position absolute
        left 50%
        top 75px
        margin-left -490px
        padding-left 30px
        background transparent url($img_path"search.png") 6px 3px no-repeat
        font-size 0
        .placeholder
            color #ccc !important
        .wrapper
            padding 0 10px
            display inline-block
            position relative
            background-color white
            border none
            border-radius(8px)
            vertical-align top
            margin-left 12px
        input
            width 160px
            border none
            font-size 14px
            padding 8px 0
            color black
            outline none
            &:-ms-input-placeholder
                color #ccc !important
        .active
            box-shadow 0 0 5px 2px white
        span
            display inline-block
            font-size 14px
            margin-left 12px
            padding 8px 10px
            color white
            cursor pointer
            vertical-align top

    .requestcontainer
        width 980px
        position absolute
        left 50%
        top 75px
        margin-left -490px
        .maininfo
            background-color #233045
            position relative
            border none
            border-radius(2px)
