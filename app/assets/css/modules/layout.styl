@import '../import/vars'

body.login
    background-color #404b62
    background-image url($img_path"bg895x1.png")
    background-repeat repeat-x

    .login_form
        width 300px
        position fixed
        left 50%
        top 50%
        margin-left -150px
        margin-top -100px
        text-align center

        input
            margin 5px
            background none
            border 1px solid #eeffff
            width 240px
            height 24px
            color white
        button
            margin 5px
            background-color #eeffff
            border 1px solid #eeffff
            width 80px
            height 24px
            cursor pointer
            color #444444
            border-radius(6px)

body.application
    font-size 1em
    font-family Verdana,Arial
    background-color #404b62
    background-image url($img_path"bg895x1.png")
    background-repeat repeat-x
    padding 0
    margin 0
    .header
        position relative
        padding 0
        margin 0
        height 60px
        width 100%
        background-image url($img_path"header_strech.png")
        background-repeat repeat-x
        .header_center
            position absolute
            left 50%
            padding 0
            margin 0 0 0 -492px
            width 980px
            height 60px
            background-image url($img_path"header.png")
            .title
                font-size 2em
                color #b3cef0
                margin 5px
                float left
            .authInfo
                float right
                text-align right
                .name
                    color white
                    font-size 1.2em
                .pos
                    color white
                    font-size 0.8em
                .exit
                    cursor pointer
                    color #8bbaf6
                    &:hover
                        color #ffae3b
    .table
        margin 20px
        table.mnptab
            position absolute
            left 50%
            top 160px
            margin-left -490px
            width 980px
            font-size 0.9em
            border-spacing 0
            border-collapse collapse
            tr
                color #000000
                td
                    padding 10px 30px 10px 7px
                    border-width 0
                    border-image-width 0
                    .click-wrapper
                        position relative
                        width 26px
                        height 26px
                    .actionbtn
                        position relative
                        float left
                        display block
                        width 26px
                        height 26px
                        grad(#33547f, #33547f, #293f5c)
                        border-radius(5px)
                        color white
                        text-align center
                        cursor pointer
                        &:hover
                            grad(#293f5c, #293f5c, #33547f)
                        div
                            position absolute
                            width 26px
                            height 26px
                            top 0
                            left 0
                        .viewbtn
                            background-image url($img_path"view_ico.png")
                            background-position 50% 50%
                            background-repeat no-repeat
                        .returnbtn
                            background-image url($img_path"return_ico.png")
                            background-position 50% 50%
                            background-repeat no-repeat
                        .workbtn
                            background-image url($img_path"work_ico.png")
                            background-position 50% 50%
                            background-repeat no-repeat
                td.outgoing
                    color #c22607
                td.incomming
                    color #17ba01

                td.fd
                    padding 0
                    .open
                        background transparent url($img_path"open_btns.png") 0 0 no-repeat
                        width 21px
                        height 21px
                        margin 5px 5px 5px 10px
                        cursor pointer
                        &:hover
                            background-position 0 -21px
                    .close
                        background-position 0 -42px
                        &:hover
                            background-position 0 -63px

                td.ld
                    padding 10px 7px 10px 7px
                    text-align center

                td.info
                    text-align center
                    table
                        tr
                            td.l
                                text-align right
                                padding 5px 15px 5px 5px
                                color #989898
                                vertical-align top
                            td.r
                                text-align left
                                padding 5px
                                color black
                                vertical-align top
            tr.head
                td
                    cursor pointer
                    background none
                    background-color #b3cef0
                    color white
                    padding 10px 30px 10px 7px
                    border 0
                    border-bottom 1px solid #7b95b6
                td.desc:hover
                    background-image url($img_path"dwn_arrow1.png")
                    background-repeat no-repeat
                    background-position 95% 90%
                td.asc:hover
                    background-image url($img_path"up_arrow1.png")
                    background-repeat no-repeat
                    background-position 95% 90%
                td.sorted_desc
                    background-image url($img_path"dwn_arrow1.png")
                    background-repeat no-repeat
                    background-position 95% 90%
                    &:hover
                        background-image url($img_path"dwn_arrow2.png")
                td.sorted_asc
                    background-image url($img_path"up_arrow1.png")
                    background-repeat no-repeat
                    background-position 95% 90%
                    &:hover
                        background-image url($img_path"up_arrow2.png")

            tr.even
                background-color #ffffff
                clear both
                td
                    border 0 !important
            tr.odd
                background-color #d7e8fe
                clear both
                td
                    border 0 !important

            tr.paging
                td
                    text-align center
                    .paging
                        width 100%
                        position relative
                        button
                            padding 5px
                            height 25px
                            line-height 1
                            display inline-block
                            position relative
                            color #d7e8fe
                            cursor pointer
                            background none
                            border none
                            outline none
                            vertical-align middle
                        button.active
                            background-color #d7e8fe
                            color #34445c
                            border-radius(3px)
                        button.firstpageset
                            width 25px
                            background-color #d7e8fe
                            color #34445c
                            border-radius(3px)
                            background-image url($img_path"2_arrows_left.png")
                            background-position 6px
                            background-repeat no-repeat
                            margin-left 2px
                        button.prevpageset
                            width 25px
                            background-color #d7e8fe
                            color #34445c
                            border-radius(3px)
                            background-image url($img_path"arrows_left.png")
                            background-position 5px
                            background-repeat no-repeat
                            margin-left 2px
                        button.nextpageset
                            width 25px
                            background-color #d7e8fe
                            color #34445c
                            border-radius(3px)
                            background-image url($img_path"arrows_right.png")
                            background-position 6px
                            background-repeat no-repeat
                            margin-left 2px
                        button.lastpageset
                            width 25px
                            background-color #d7e8fe
                            color #34445c
                            border-radius(3px)
                            background-image url($img_path"2_arrows_right.png")
                            background-position 5px
                            background-repeat no-repeat
                            margin-left 2px




    .tabblock
        width 980px
        position absolute
        left 50%
        top 120px
        margin-left -490px
        overflow hidden
        ul.tablist
            position relative
            margin 0
            padding 0
            float left
            font-size 0
            li
                font-size 14px
                margin 1px
                padding 3px
                list-style-type none
                padding 10px
                line-height 18px
                background-color #293f5b
